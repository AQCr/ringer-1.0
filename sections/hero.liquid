{% schema %}
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "A bold headline that delivers"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext",
      "default": "A short supporting paragraph that connects emotionally."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Text",
      "default": "Shop Now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "image_picker",
      "id": "hero_image_1",
      "label": "Hero Image 1"
    },
    {
      "type": "image_picker",
      "id": "hero_image_2",
      "label": "Hero Image 2"
    },
    {
      "type": "image_picker",
      "id": "hero_image_3",
      "label": "Hero Image 3"
    }
  ],
  "presets": [
    { "name": "Hero Section" }
  ]
}
{% endschema %}

<section class="relative w-full h-[90vh] flex flex-col justify-center items-center text-center px-4">
  {% if section.settings.background_image != blank %}
    <div class="absolute inset-0">
      <img 
        src="{{ section.settings.background_image | image_url: width: 1800 }}"
        alt="Hero background"s
        width="1800",
        height="960"
        class="w-full h-full object-cover opacity-70"
        loading="lazy"
      >
    </div>
  {% endif %}

  <div class="relative z-10 max-w-2xl mx-auto">
    <h1 class="text-4xl md:text-6xl font-bold mb-4">{{ section.settings.heading }}</h1>
    <p class="text-lg mb-6">{{ section.settings.subtext }}</p>

    {% if section.settings.button_label != blank %}
      <a href="{{ section.settings.button_link }}" class="bg-black text-white px-6 py-3 rounded-md hover:bg-gray-800">
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>

  <div class="relative mt-12 flex justify-center space-x-4 z-10">
    {% for i in (1..3) %}
      {% assign img = section.settings["hero_image_" | append: i] %}
      {% if section.settings.hero_image_1 != blank %}
        <div class="w-40 h-56 bg-gray-100 rounded-xl shadow-md overflow-hidden transform hover:scale-105 transition">
          <img 
            src="{{ section.settings.hero_image_1 | image_url: width: 400 }}" 
            alt="Hero card {{ i }}"
            width="400" 
            height="500"
            class="w-full h-full object-cover"
            loading="lazy"
          >
        </div>
      {% endif %}
    {% endfor %}
  </div>
</section>
