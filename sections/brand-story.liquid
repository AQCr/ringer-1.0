<section id="{{ section.id }}" class="py-12">
  <div class="container mx-auto px-6 max-w-4xl text-center">
    <h2 class="text-2xl font-semibold text-black">{{ section.settings.title }}</h2>
    <p class="mt-4 text-black/70">{{ section.settings.text }}</p>
    {% if section.settings.button_text %}
      <a href="{{ section.settings.button_link }}" class="mt-6 inline-block px-5 py-2 border border-black rounded">{{ section.settings.button_text }}</a>
    {% endif %}
  </div>

  {% schema %}
  {
    "name": "Brand Story",
    "settings": [
      { "type": "text", "id": "title", "label": "Heading", "default": "Our story" },
      { "type": "textarea", "id": "text", "label": "Paragraph", "default": "Short emotional connection paragraph about the brand." },
      { "type": "text", "id": "button_text", "label": "Button text", "default": "Learn more" },
      { "type": "url", "id": "button_link", "label": "Button link", "default": "#" }
    ]
  }
  {% endschema %}
</section>
