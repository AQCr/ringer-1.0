<section id="{{ section.id }}" class="py-12 bg-white">
  <div class="container mx-auto px-6 max-w-6xl">
    <h2 class="text-2xl font-semibold text-black">{{ section.settings.title }}</h2>
    <p class="text-black/70 mt-2 mb-6">{{ section.settings.description }}</p>

    <div class="grid grid-cols-1 sm:grid-cols-3 gap-6">
      {% for block in section.blocks %}
        <div class="relative group overflow-hidden">
          {% if block.settings.image %}
            <img src="{{ block.settings.image | image_url: '600x' }}" width="" height="" alt="" class="w-full h-56 object-cover">
          {% else %}
            <div class="w-full h-56 bg-black/05"></div>
          {% endif %}
          <div class="p-4">
            <h3 class="font-semibold">{{ block.settings.title }}</h3>
            <p class="text-sm text-black/70 mt-1">{{ block.settings.text }}</p>
            <a href="{{ block.settings.link }}" class="mt-3 inline-block text-sm border border-black/10 px-3 py-1 rounded">Shop</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>

  {% schema %}
  {
    "name": "Collection showcase",
    "settings": [
      { "type": "text", "id": "title", "label": "Title", "default": "Collections" },
      { "type": "textarea", "id": "description", "label": "Description", "default": "Our curate merchandise" }
    ],
    "blocks": [
      { "type": "collection_card", "name": "Card", "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "title", "label": "Title" },
        { "type": "textarea", "id": "text", "label": "Text" },
        { "type": "url", "id": "link", "label": "Link" }
      ] }
    ],
    "max_blocks": 6
  }
  {% endschema %}
</section>
