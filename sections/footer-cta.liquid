<section id="{{ section.id }}" class="py-12 bg-black text-white">
  <div class="container mx-auto px-6 max-w-4xl text-center">
    <h2 class="text-2xl font-semibold">{{ section.settings.title }}</h2>
    <p class="mt-3 text-white/80">{{ section.settings.text }}</p>

    <form action="/contact#contact_form" method="post" class="mt-6 flex justify-center gap-3">
      <input type="email" name="contact[email]" placeholder="{{ section.settings.email_placeholder }}" required class="px-4 py-2 rounded text-black">
      <button type="submit" class="px-5 py-2 rounded border border-white">{{ section.settings.button_text }}</button>
    </form>
  </div>

  {% schema %}
  {
    "name": "Footer CTA",
    "settings": [
      { "type": "text", "id": "title", "label": "Title", "default": "Stay in the loop" },
      { "type": "textarea", "id": "text", "label": "Text", "default": "Sign up for updates and offers." },
      { "type": "text", "id": "email_placeholder", "label": "Email placeholder", "default": "you@example.com" },
      { "type": "text", "id": "button_text", "label": "Button text", "default": "Subscribe" }
    ]
  }
  {% endschema %}
</section>