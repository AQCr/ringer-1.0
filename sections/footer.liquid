<section class="w-full bg-neutral-900 text-white py-14">
  <div class="container mx-auto px-6 grid gap-10 md:grid-cols-4">
    
    {% for block in section.blocks %}
      
      {% case block.type %}
      
      <!-- Logo Block -->
      {% when 'logo' %}
        <div class="flex flex-col gap-3">
          {% if block.settings.footer_logo %}
            <img src="{{ block.settings.footer_logo | image_url }}" width="" height="" class="w-36" />
          {% else %}
            <h2 class="text-xl font-semibold tracking-wide">{{ block.settings.logo_text }}</h2>
          {% endif %}
        </div>
      
      <!-- Email Signup -->
      {% when 'email' %}
        <div>
          <h3 class="text-lg font-semibold mb-2">{{ block.settings.email_title }}</h3>
          <p class="text-sm text-neutral-400 mb-3">{{ block.settings.email_subtext }}</p>
          <form method="post" action="/contact#footer-newsletter" class="flex gap-2">
            <input
              type="email"
              name="contact[email]"
              required
              placeholder="Enter email"
              class="w-full px-3 py-2 bg-neutral-800 border border-neutral-700 rounded text-sm focus:ring focus:ring-neutral-600"
            >
            <button type="submit"
              class="px-4 py-2 bg-white text-black rounded text-sm font-medium hover:bg-neutral-200 transition">
              Go
            </button>
          </form>
        </div>
      
      <!-- Menu Blocks -->
      {% when 'menu' %}
        <div>
          <h3 class="font-semibold mb-3">{{ block.settings.menu_title }}</h3>
          <ul class="space-y-2 text-sm">
            {% for link in linklists[block.settings.footer_menu].links %}
              <li>
                <a href="{{ link.url }}" class="hover:text-neutral-300 transition">{{ link.title }}</a>
              </li>
            {% endfor %}
          </ul>
        </div>

      <!-- Social Icons -->
      {% when 'social' %}
        <div>
          <h3 class="font-semibold mb-3">{{ block.settings.social_title }}</h3>
          <div class="flex gap-3 text-xl">
            {% if block.settings.facebook_link != blank %}
              <a href="{{ block.settings.facebook_link }}" class="hover:text-neutral-300 transition"> <span class="[&>svg]:h-7 [&>svg]:w-7 [&>svg]:fill-[#1877f2]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512">
                <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                <path d="M80 299.3V512H196V299.3h86.5l18-97.8H196V166.9c0-51.7 20.3-71.5 72.7-71.5c16.3 0 29.4 .4 37 1.2V7.9C291.4 4 256.4 0 236.2 0C129.3 0 80 50.5 80 159.4v42.1H14v97.8H80z" />
                 </svg> </span> </a>
            {% endif %}
            {% if block.settings.instagram_link != blank %}
              <a href="{{ block.settings.instagram_link }}" class="hover:text-neutral-300 transition"> <span class="[&>svg]:h-7 [&>svg]:w-7 [&>svg]:fill-[#c13584]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512">
                <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                <path d="M224.1 141c-63.6 0-114.9 51.3-114.9 114.9s51.3 114.9 114.9 114.9S339 319.5 339 255.9 287.7 141 224.1 141zm0 189.6c-41.1 0-74.7-33.5-74.7-74.7s33.5-74.7 74.7-74.7 74.7 33.5 74.7 74.7-33.6 74.7-74.7 74.7zm146.4-194.3c0 14.9-12 26.8-26.8 26.8-14.9 0-26.8-12-26.8-26.8s12-26.8 26.8-26.8 26.8 12 26.8 26.8zm76.1 27.2c-1.7-35.9-9.9-67.7-36.2-93.9-26.2-26.2-58-34.4-93.9-36.2-37-2.1-147.9-2.1-184.9 0-35.8 1.7-67.6 9.9-93.9 36.1s-34.4 58-36.2 93.9c-2.1 37-2.1 147.9 0 184.9 1.7 35.9 9.9 67.7 36.2 93.9s58 34.4 93.9 36.2c37 2.1 147.9 2.1 184.9 0 35.9-1.7 67.7-9.9 93.9-36.2 26.2-26.2 34.4-58 36.2-93.9 2.1-37 2.1-147.8 0-184.8zM398.8 388c-7.8 19.6-22.9 34.7-42.6 42.6-29.5 11.7-99.5 9-132.1 9s-102.7 2.6-132.1-9c-19.6-7.8-34.7-22.9-42.6-42.6-11.7-29.5-9-99.5-9-132.1s-2.6-102.7 9-132.1c7.8-19.6 22.9-34.7 42.6-42.6 29.5-11.7 99.5-9 132.1-9s102.7-2.6 132.1 9c19.6 7.8 34.7 22.9 42.6 42.6 11.7 29.5 9 99.5 9 132.1s2.7 102.7-9 132.1z" />
                </svg> </span> </a>
            {% endif %}
            {% if block.settings.tiktok_link != blank %}
              <a href="{{ block.settings.tiktok_link }}" class="hover:text-neutral-300 transition">
                <!-- TikTok -->
                <span class="[&>svg]:h-7 [&>svg]:w-7 [&>svg]:fill-[#6a76ac]">
                <svg xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 448 512">
                <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                <path d="M448 209.9a210.1 210.1 0 0 1 -122.8-39.3V349.4A162.6 162.6 0 1 1 185 188.3V278.2a74.6 74.6 0 1 0 52.2 71.2V0l88 0a121.2 121.2 0 0 0 1.9 22.2h0A122.2 122.2 0 0 0 381 102.4a121.4 121.4 0 0 0 67 20.1z" />
                </svg> </span></a>
            {% endif %}
            {% if block.settings.youtube_link != blank %}
              <a href="{{ block.settings.youtube_link }}" class="hover:text-neutral-300 transition">
                                <!-- Youtube -->
                <span class="[&>svg]:h-7 [&>svg]:w-7 [&>svg]:fill-[#ff0000]">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 576 512">
                <!--!Font Awesome Free 6.5.1 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license/free Copyright 2024 Fonticons, Inc. -->
                <path d="M549.7 124.1c-6.3-23.7-24.8-42.3-48.3-48.6C458.8 64 288 64 288 64S117.2 64 74.6 75.5c-23.5 6.3-42 24.9-48.3 48.6-11.4 42.9-11.4 132.3-11.4 132.3s0 89.4 11.4 132.3c6.3 23.7 24.8 41.5 48.3 47.8C117.2 448 288 448 288 448s170.8 0 213.4-11.5c23.5-6.3 42-24.2 48.3-47.8 11.4-42.9 11.4-132.3 11.4-132.3s0-89.4-11.4-132.3zm-317.5 213.5V175.2l142.7 81.2-142.7 81.2z" />
                </svg> </span> </a>
            {% endif %}
          </div>
        </div>

      <!-- Payment Icons -->
      {% when 'payments' %}
        <div>
          <h3 class="font-semibold mb-2">{{ block.settings.pay_title }}</h3>
          <div class="flex gap-2 flex-wrap">
            {% for method in shop.enabled_payment_types %}
              <span class="bg-neutral-800 px-3 py-1 text-sm rounded uppercase">{{ method }}</span>
            {% endfor %}
          </div>
        </div>

      {% endcase %}
    
    {% endfor %}
  </div>

  <!-- Bottom line -->
  <div class="container mx-auto px-6 mt-10 border-t border-neutral-800 pt-5 text-xs text-neutral-500 flex justify-between">
    <span>Â© {{ shop.name }} {{ 'now' | date: "%Y" }}</span>
    <span>Your own Jwellary Brand</span>
  </div>
</section>

{% schema %}
{
  "name": "Custom Footer (Tailwind)",
  "settings": [],
  "blocks": [
    {
      "type": "logo",
      "name": "Logo Block",
      "settings": [
        { "type": "image_picker", "id": "footer_logo", "label": "Logo" },
        { "type": "text", "id": "logo_text", "label": "Text Logo", "default": "Your Brand" }
      ]
    },
    {
      "type": "email",
      "name": "Email Signup",
      "settings": [
        { "type": "text", "id": "email_title", "label": "Title", "default": "Newsletter" },
        { "type": "text", "id": "email_subtext", "label": "Sub Text", "default": "Stay updated with new drops" }
      ]
    },
    {
      "type": "menu",
      "name": "Menu Column",
      "settings": [
        { "type": "text", "id": "menu_title", "label": "Menu Title", "default": "Links" },
        { "type": "link_list", "id": "footer_menu", "label": "Select Menu" }
      ]
    },
    {
      "type": "social",
      "name": "Social Icons",
      "settings": [
        { "type": "text", "id": "social_title", "label": "Heading", "default": "Follow Us" },
        { "type": "url", "id": "facebook_link", "label": "Facebook" },
        { "type": "url", "id": "instagram_link", "label": "Instagram" },
        { "type": "url", "id": "tiktok_link", "label": "TikTok" },
        { "type": "url", "id": "youtube_link", "label": "YouTube" }
      ]
    },
    {
      "type": "payments",
      "name": "Payment Icons",
      "settings": [
        { "type": "text", "id": "pay_title", "label": "Heading", "default": "We Accept" }
      ]
    }
  ],
  "presets": [
    {
      "name": "Custom Footer",
      "blocks": [
        { "type": "logo" },
        { "type": "email" },
        { "type": "menu" },
        { "type": "menu" },
        { "type": "menu" },
        { "type": "social" },
        { "type": "payments" }
      ]
    }
  ]
}
{% endschema %}