<section id="{{ section.id }}" class="py-16">
  <div class="w-full relative">
    <div class="h-64 md:h-96 w-full bg-black/5 flex items-center justify-center">
      {% if section.settings.video_poster != blank %}
        <img src="{{ section.settings.video_poster | image_url: '1600x' width="" height="" }}" alt="video poster" class="w-full h-full object-cover"/>
      {% endif %}
      <div class="absolute inset-0 flex flex-col items-center justify-center p-6 text-center z-10">
        <h3 class="text-2xl md:text-3xl font-semibold text-black">{{ section.settings.title }}</h3>
        <p class="mt-3 text-black/70 max-w-2xl">{{ section.settings.text }}</p>
      </div>
    </div>
  </div>

  {% schema %}
  {
    "name": "Video banner",
    "settings": [
      { "type": "image_picker", "id": "video_poster", "label": "Poster image" },
      { "type": "text", "id": "title", "label": "Heading", "default": "Watch the product in action" },
      { "type": "textarea", "id": "text", "label": "Description", "default": "Short descriptive overlay for the video." },
      { "type": "url", "id": "video_link", "label": "Video link (optional)" }
    ]
  }
  {% endschema %}
</section>
