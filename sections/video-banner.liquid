<section class="relative w-full h-[80vh] overflow-hidden">
  {% if section.settings.video != blank %}
    <div class="absolute inset-0 z-0">
      {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, playsinline: true, class: "w-full h-full object-cover" }}
    </div>
  {% else %}
    <div class="absolute inset-0 bg-gray-200 flex items-center justify-center text-gray-600 z-0">
      Upload a video
    </div>
  {% endif %}

  <div class="absolute inset-0 bg-black/40 flex flex-col items-center justify-center text-center text-white px-6 z-10">
    <h2 class="text-3xl font-bold mb-2">{{ section.settings.heading }}</h2>
    <p class="max-w-xl">{{ section.settings.text }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Video Banner",
  "settings": [
    {
      "type": "video",
      "id": "video",
      "label": "Background video"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Watch Our Story"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Description",
      "default": "A short description goes here"
    }
  ]
}
{% endschema %}
