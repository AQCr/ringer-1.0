<section class="relative w-full h-[80vh] overflow-hidden">
  {% if section.settings.video != blank %}
    {{ section.settings.video | video_tag: autoplay: true, loop: true, muted: true, controls: true, class: "w-full h-full object-cover" }}
  {% else %}
    <div class="bg-gray-200 w-full h-full flex items-center justify-center text-gray-600">Upload a video</div>
  {% endif %}
  <div class="absolute inset-0 bg-black bg-opacity-40 flex flex-col items-center justify-center text-center text-white px-6">
    <h2 class="text-3xl font-bold mb-2">{{ section.settings.heading }}</h2>
    <p class="max-w-xl">{{ section.settings.text }}</p>
  </div>
</section>

{% schema %}
{
  "name": "Video Banner",
  "settings": [
    {
      "type": "url",
      "id": "video",
      "label": "Background video"
      
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Watch Our Story"
    },
    {
      "type": "text",
      "id": "text",
      "label": "Description",
      "default": "A short description goes here"
    }
  ]
}
{% endschema %}