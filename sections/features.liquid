<section id="{{ section.id }}" class="py-12">
  <div class="container mx-auto px-6 max-w-6xl">
    <h2 class="text-2xl font-semibold text-black mb-6">{{ section.settings.title }}</h2>
    <div class="grid grid-cols-1 sm:grid-cols-3 lg:grid-cols-4 gap-6">
      {% for i in (1..8) %}
        {% if section.settings["feature_title_" | append: i] != blank %}
        <div class="p-4 rounded-lg shadow-md bg-white text-black">
          <div class="h-10 w-10 flex items-center justify-center rounded-full border border-black/10 mb-3">
            {{ section.settings["feature_icon_" | append: i] | default: "★" }}
          </div>
          <h4 class="font-semibold">{{ section.settings["feature_title_" | append: i] }}</h4>
          <p class="text-sm text-black/70 mt-1">{{ section.settings["feature_text_" | append: i] }}</p>
        </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>

  {% schema %}
  {
    "name": "Features",
    "settings": [
      { "type": "text", "id": "title", "label": "Section title", "default": "Key features" }
    ],
    "blocks": [
      { "type": "feature", "name": "Feature", "settings": [
        { "type": "text", "id": "feature_icon", "label": "Icon (emoji or text)", "default": "★" },
        { "type": "text", "id": "feature_title", "label": "Title", "default": "Fast shipping" },
        { "type": "textarea", "id": "feature_text", "label": "Description", "default": "Quick delivery to your door." }
      ] }
    ],
    "max_blocks": 8,
    "presets": [{ "name": "Features" }]
  }
  {% endschema %}
</section>