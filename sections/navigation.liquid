<header class="w-full bg-white shadow-md fixed top-0 left-0 z-50">
  <div class="max-w-7xl mx-auto px-6 py-4 flex justify-between items-center">
    <!-- Logo -->
    <div class="text-2xl font-bold">
      <a href="/">Shop Name</a>
    </div>

    <!-- Desktop Menu -->
    <nav class="hidden md:flex space-x-8">
      <a href="/" class="text-gray-700 hover:text-black">Home</a>
      <a href="/collections/all" class="text-gray-700 hover:text-black">Shop</a>
      <a href="/pages/about" class="text-gray-700 hover:text-black">About</a>
      <a href="/pages/contact" class="text-gray-700 hover:text-black">Contact</a>
    </nav>

    <!-- Hamburger Button (Mobile) -->
    <button id="menu-btn" class="md:hidden flex flex-col justify-between w-6 h-5 focus:outline-none z-50">
      <span class="block w-full h-0.5 bg-gray-800"></span>
      <span class="block w-full h-0.5 bg-gray-800"></span>
      <span class="block w-full h-0.5 bg-gray-800"></span>
    </button>
  </div>

  <!-- Mobile Menu -->
  <nav
    id="mobile-menu"
    class="fixed inset-0 bg-white flex flex-col items-center justify-center space-y-6 text-lg transform translate-y-[-100%] transition-transform duration-300 ease-in-out md:hidden z-40"
  >
    <a href="/" class="text-gray-800 hover:text-black">Home</a>
    <a href="/collections/all" class="text-gray-800 hover:text-black">Shop</a>
    <a href="/pages/about" class="text-gray-800 hover:text-black">About</a>
    <a href="/pages/contact" class="text-gray-800 hover:text-black">Contact</a>
  </nav>
</header>

<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");
  let menuOpen = false;

  menuBtn.addEventListener("click", () => {
    menuOpen = !menuOpen;

    if (menuOpen) {
      mobileMenu.classList.remove("translate-y-[-100%]");
      document.body.style.overflow = "hidden"; // prevent scroll
    } else {
      mobileMenu.classList.add("translate-y-[-100%]");
      document.body.style.overflow = "auto";
    }
  });
</script>
