<testimonials-slider-{{ ai_gen_id }} class="ai-testimonials-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-testimonials-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-testimonials-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-testimonials-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-testimonials-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-testimonials-slider-wrapper-{{ ai_gen_id }}">
      <div class="ai-testimonials-grid-{{ ai_gen_id }}" data-slider>
        {% for i in (1..6) %}
          {% liquid
            assign name_key = 'testimonial_' | append: i | append: '_name'
            assign role_key = 'testimonial_' | append: i | append: '_role'
            assign text_key = 'testimonial_' | append: i | append: '_text'
            assign image_key = 'testimonial_' | append: i | append: '_image'
            assign rating_key = 'testimonial_' | append: i | append: '_rating'

            assign name = block.settings[name_key]
            assign role = block.settings[role_key]
            assign text = block.settings[text_key]
            assign image = block.settings[image_key]
            assign rating = block.settings[rating_key]
          %}

          {% if name != blank or text != blank %}
            <div class="ai-testimonials-card-{{ ai_gen_id }}">
              <div class="ai-testimonials-card-header-{{ ai_gen_id }}">
                <div class="ai-testimonials-image-wrapper-{{ ai_gen_id }}">
                  {% if image %}
                    <img
                      src="{{ image | image_url: width: 200 }}"
                      alt="{{ name | escape }}"
                      loading="lazy"
                      width="200"
                      height="200"
                    >
                  {% else %}
                    {{ 'image' | placeholder_svg_tag }}
                  {% endif %}
                </div>
                <div class="ai-testimonials-author-info-{{ ai_gen_id }}">
                  {% if name != blank %}
                    <h3 class="ai-testimonials-name-{{ ai_gen_id }}">{{ name }}</h3>
                  {% endif %}
                  {% if role != blank %}
                    <p class="ai-testimonials-role-{{ ai_gen_id }}">{{ role }}</p>
                  {% endif %}
                </div>
              </div>

              {% if block.settings.show_rating and rating > 0 %}
                <div class="ai-testimonials-rating-{{ ai_gen_id }}">
                  {% for star in (1..rating) %}
                    <svg class="ai-testimonials-star-{{ ai_gen_id }}" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                      <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                    </svg>
                  {% endfor %}
                </div>
              {% endif %}

              {% if text != blank %}
                <p class="ai-testimonials-text-{{ ai_gen_id }}">{{ text }}</p>
              {% endif %}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <div class="ai-testimonials-nav-{{ ai_gen_id }}">
        <button class="ai-testimonials-nav-button-{{ ai_gen_id }}" data-prev aria-label="Previous testimonial">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M15 18l-6-6 6-6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
        <button class="ai-testimonials-nav-button-{{ ai_gen_id }}" data-next aria-label="Next testimonial">
          <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M9 18l6-6-6-6" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </button>
      </div>

      <div class="ai-testimonials-dots-{{ ai_gen_id }}" data-dots></div>
    </div>
  </div>
</testimonials-slider-{{ ai_gen_id }}>

<script>
  (function() {
    class TestimonialsSlider{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.slider = null;
        this.cards = [];
        this.currentIndex = 0;
        this.dotsContainer = null;
      }

      connectedCallback() {
        this.slider = this.querySelector('[data-slider]');
        this.cards = Array.from(this.querySelectorAll('.ai-testimonials-card-{{ ai_gen_id }}'));
        this.dotsContainer = this.querySelector('[data-dots]');
        
        if (window.innerWidth <= 749) {
          this.initMobileSlider();
        }

        window.addEventListener('resize', () => {
          if (window.innerWidth <= 749) {
            this.initMobileSlider();
          } else {
            this.destroyMobileSlider();
          }
        });
      }

      initMobileSlider() {
        if (!this.slider || this.cards.length === 0) return;

        this.createDots();
        this.updateDots();

        const prevButton = this.querySelector('[data-prev]');
        const nextButton = this.querySelector('[data-next]');

        if (prevButton) {
          prevButton.addEventListener('click', () => this.navigate(-1));
        }

        if (nextButton) {
          nextButton.addEventListener('click', () => this.navigate(1));
        }

        this.slider.addEventListener('scroll', () => {
          this.handleScroll();
        });
      }

      createDots() {
        if (!this.dotsContainer) return;
        
        this.dotsContainer.innerHTML = '';
        
        this.cards.forEach((card, index) => {
          const dot = document.createElement('button');
          dot.className = 'ai-testimonials-dot-{{ ai_gen_id }}';
          dot.setAttribute('aria-label', `Go to testimonial ${index + 1}`);
          dot.addEventListener('click', () => this.goToSlide(index));
          this.dotsContainer.appendChild(dot);
        });
      }

      updateDots() {
        if (!this.dotsContainer) return;
        
        const dots = this.dotsContainer.querySelectorAll('.ai-testimonials-dot-{{ ai_gen_id }}');
        dots.forEach((dot, index) => {
          if (index === this.currentIndex) {
            dot.classList.add('active');
          } else {
            dot.classList.remove('active');
          }
        });
      }

      handleScroll() {
        if (!this.slider) return;
        
        const scrollLeft = this.slider.scrollLeft;
        const cardWidth = this.cards[0].offsetWidth + 16;
        const newIndex = Math.round(scrollLeft / cardWidth);
        
        if (newIndex !== this.currentIndex) {
          this.currentIndex = newIndex;
          this.updateDots();
        }
      }

      navigate(direction) {
        const newIndex = this.currentIndex + direction;
        
        if (newIndex >= 0 && newIndex < this.cards.length) {
          this.goToSlide(newIndex);
        }
      }

      goToSlide(index) {
        if (!this.slider || !this.cards[index]) return;
        
        const cardWidth = this.cards[0].offsetWidth + 16;
        this.slider.scrollTo({
          left: cardWidth * index,
          behavior: 'smooth'
        });
        
        this.currentIndex = index;
        this.updateDots();
      }

      destroyMobileSlider() {
        if (this.dotsContainer) {
          this.dotsContainer.innerHTML = '';
        }
      }
    }

    customElements.define('testimonials-slider-{{ ai_gen_id }}', TestimonialsSlider{{ ai_gen_id }});
  })();
</script>

