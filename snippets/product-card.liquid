
{% render 'product-card'%}

<div class="product-card bg-white border border-black p-4 rounded-lg shadow-sm text-black">
  <a href="{{ product.url }}" class="block">
    <div class="aspect-w-1 aspect-h-1 w-full mb-3 bg-gray-100 flex items-center justify-center">
      {% if product.featured_image %}
        <img src="{{ product.featured_image | image_url: '600x' }}" width="auto" height="auto" alt="{{ product.title }}" class="w-full h-full object-cover">
      {% else %}
        <div class="text-xs text-black/60">Image placeholder</div>
      {% endif %}
    </div>
    <h3 class="text-lg font-semibold">{{ product.title }}</h3>
    <p class="text-sm text-black/70 mt-1">{{ product.description | strip_html | truncate: 80 }}</p>
  </a>

  <div class="mt-3 flex items-center justify-between">
    <div class="flex items-center space-x-2">
      <!-- stars placeholder -->
      <div class="stars text-sm">★★★★★</div>
      <div class="text-xs text-black/60">(0)</div>
    </div>

    <div class="space-x-2">
      <button data-buy-now data-product-id="{{ product.id }}" class="btn-buy inline-block px-3 py-1 border border-black rounded text-sm">Buy now</button>
      <button data-add-to-cart data-product-id="{{ product.variants.first.id }}" class="btn-add inline-block px-3 py-1 bg-black text-white rounded text-sm">Add to cart</button>
    </div>
  </div>
</div>
